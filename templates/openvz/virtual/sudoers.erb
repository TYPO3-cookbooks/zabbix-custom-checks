# Zabbix configuration for running checks without password
Cmnd_Alias ZABBIX_CMD_OPENVZ = <%= node.zabbix.external_dir %>/openvz-virtual-beancount-monitor.py *, <%= node.zabbix.external_dir %>/openvz-virtual-beancount-failcnt.py -c

# Disable syslog entries for ZABBIX_CMD_OPENVZ
Defaults!ZABBIX_CMD_OPENVZ !syslog

# ZABBIX special privileges
zabbix ALL=NOPASSWD: ZABBIX_CMD_OPENVZ